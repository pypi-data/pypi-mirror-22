---
meta:
    description:
        {{description|default('Elasticache cluster')}}

    parameters:
        az_mode:
            description:
                Either single-az or cross-az
            value:
                single-az

        cache_node_type:
            description:
                The node type
            value:
                cache.m3.medium

        engine:
            description:
                The cache engine. Either memcached or redis.
            value:
                memcached

        num_cache_nodes:
            description:
                The number of nodes in the cache
            value:
                1

        redis_cluster_mode:
            description:
                Activate or not cluster mode for redis.
            value:
                no

        replicas_per_group:
            description:
                Numb replicas per node group when redis cluster mode enabled.
            value:
                1

        vpc_security_group_ids:
            description:
                A list of VPC security group IDs
            value:

        subnet_ids:
            description:
                A list of subnet IDs that conform the cluster subnet group
            value:
